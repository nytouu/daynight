/*****----- Configuration -----*****/
configuration {
	modi:                       "drun";
    show-icons:                 true;
    display-drun:               "Apps";
    display-run:                "Run";
    display-filebrowser:        "Files";
    display-window:             "Windows";
	drun-display-format:        "{name}\n[<span weight='light' size='small'><i>({generic})</i></span>]";
	window-format:              "Class : {c}\nWorkspace : {w}";
}

/*****----- Global Properties -----*****/
* {
    font:                        "Torus Pro 11";
    border-radius:               0px;
    background-color:            transparent;
}

/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
    location:                    north;
    anchor:                      north;
    fullscreen:                  false;
    width:                       500px;
    x-offset:                    0px;
    y-offset:                    260px;
    border:                      2px;
    border-radius:               0px;
    border-color:                #D9D3CE;

    /* properties for all widgets */
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    cursor:                      "default";
    background-color:            #F1F1F1e6;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     10px;
    padding:                     20px;
    background-color:            transparent;
    children:                    [ "inputbar", "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    spacing:                     0px;
    margin:                      4px;
    background-color:            #a9a39ee2;
    border-radius:               12px;
    children:                    [ "textbox-prompt-colon", "entry" ];
    text-color:                  #7D6658;
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    padding:                     12px 14px;
    border-color:                #E9E1DB;
    background-color:            inherit;
    text-color:                  white;
    str:                         "Óöè";
    font:                        "Symbols Nerd Font Mono 13";
    vertical-align:              0.75;
    horizontal-align:            0.50;
}
entry {
    enabled:                     true;
    font:                        "Torus Pro 12";
    padding:                     12px 16px;
    border:                      0px;
    border-radius:               10px;
    border-color:                #928374;
    background-color:            inherit;
    text-color:                  white;
    cursor:                      text;
    placeholder:                 "Search...";
    placeholder-color:           #54433A;
    vertical-align:              0.75;
    horizontal-align:            -0.5;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     1;
    lines:                       6;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   true;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                false;
    fixed-columns:               true;

    spacing:                     5px;
    background-color:            transparent;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     10px;
    margin:                      0px;
    padding:                     6px;
    border:                      0px solid;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  black;
    cursor:                      pointer;
}
element normal.active {
    background-image:            linear-gradient(to right, #19B466, #7BF4B7);
    text-color:                  black;
}
element selected.normal {
    border-radius:               8px;
    background-color:            #a9a39e;
	border:                      2px;
	border-color:                #99937e;
    text-color:                  black;
}
element selected.active {
    background-image:            linear-gradient(to right, #EA5553, #EAACAB);
    text-color:                  black;
}
element-icon {
    background-color:            transparent;
    size:                        48px;
    cursor:                      inherit;
}
element-text {
    background-color:            inherit;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

button {
    font:                        "Torus Pro Bold 12";
    padding:                     8px;
    border-radius:               100%;
    background-image:            linear-gradient(to right, #C03FF2, #EEC2FF);
    text-color:                  black;
    cursor:                      pointer;
}
button selected {
    background-image:            linear-gradient(to right, #44A2F0, #BDDDF8);
    text-color:                  black;
}

/*****----- Message -----*****/
error-message {
    padding:                     14px;
    background-color:            black;
    text-color:                  white;
}
textbox {
    padding:                     0px;
    border-radius:               0px;
    text-color:                  black;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

